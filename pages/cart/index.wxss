/* pages/cart/index.wxss */
.weui-cells{
  margin-top: .5rem;
}
.weui-cells__title{
  border-bottom: 1px solid #d9d9d9;
}
.item .item-right .left,.item .item-right .mid,.item .item-right .right{
  float: left;
  display: block;
  height: 140rpx;
}
.item .item-right .mid{
  width: 376rpx;
}
.item .item-right .nav-pic{
  width: 100rpx;
  height: 100rpx;
  padding: 20rpx;
}
.item .item-right .pic{
  height: 100rpx;
  width: 100rpx;
  overflow: hidden;
}
.item .item-right .name{
  width: 376rpx;
  height: 80rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  display: -webkit-box;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.item .item-right .price{
  font-weight: bold;
  font-size: 28rpx;
  height: 80rpx;
}
.item .item-right .delete{
  height: 60rpx;
  line-height: 40rpx;
  text-align: center;
}
.input-amount{
  width: 150rpx;
  height: 48rpx;
  border: 1px solid #ccc;
}
.input-amount .minus,.input-amount .plus,.input-amount .input{
  width: 49rpx;
  height: 48rpx;
  float: left;
  border-right: 1px solid #ccc;
  text-align: center;
  line-height: 48rpx;
  font-size: 24rpx;
}
.input-amount .plus{
  border-right: 0;
}
.input-amount .input{
  overflow: hidden;
}
.input-amount .input input{
  display: block;
  height: 48rpx;
  line-height: 48rpx;
  min-height: 1.2rem;
}
.total-wrapper .left,.total-wrapper .right{
  float: left;
  font-size: 30rpx;
}
.total-wrapper .right{
  width: 460rpx;
  text-align: right;
}
.total-wrapper .weui-cell{
  -webkit-box-align:top !important;
  -webkit-align-items:top !important;
  align-items: top!important;
}
.total-wrapper .left{
  vertical-align: top;
  width: 230rpx;
}
.total-wrapper .totalAmount text{
  color: #ff00ff;
}
.total-wrapper .total{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  text-align: right;
}
.total-wrapper .price {
  width: 130rpx;
  display: inline-block;
  font-weight: bold;
}
.total-wrapper .discountPrice{
  color: #ccc;
}
.total-wrapper .totalPrice{
  color: #ff0000;
}