/* pages/details/index.wxss */
.productPic{
  width: 20rem;
  height: 600rpx;
}
.productPic swiper{
  height: 100%;
}
.productPic image{
  width: 100%;
  height: 100%;
}
.productName {
  padding: 20rpx 45rpx;
  color: #656565;
  background-color: #fff;
}
.productName .name{
  line-height: 40rpx;
  font-size: 36rpx;
  font-weight: bold;
  width: 660rpx;
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.reason{
  padding: 0 45rpx;
  font-size: 30rpx;
  background-color: #fff;
}
.productPirce {
  height: 120rpx;
  padding: 0 45rpx;
  background-color: #fff;
}
.productPirce .left,.productPirce .right{
  float: left;
  
  line-height: 60rpx;
}
.productPirce .left{
  color: #ff0000;
  width: 400rpx;
  font-size: 42rpx;
}
.productPirce .marketPrice{
  text-decoration: line-through;
  font-size: 26rpx;
  color: #ccc;
}
.productPirce .right{
  font-size: 28rpx;
  width: 260rpx;
}