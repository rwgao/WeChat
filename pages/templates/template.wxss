.brandList .items .item {
  float: left;
  width: 359rpx;
  height: 180rpx;
  margin-bottom: 8rpx;
  margin-right: 8rpx;
}

.brandList .items .item image {
  width: 359rpx;
  height: 180rpx;
}
.product .item {
  width: 337rpx;
  background-color: #fff;
  padding: 10rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  float: left;
}

.product .item .pic {
  width: 337rpx;
  height: 300rpx;
  overflow: hidden;
}

.product .item .pic image {
  width: 337rpx;
  height: 300rpx;
}

.product .item .title {
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 40rpx;
  font-size: 30rpx;
  color: #656565;
}

.product .item .shopName {
  height: 80rpx;
  line-height: 80rpx;
}

.product .item .shopName .name {
  display: inline-block;
  font-weight: bold;
  font-size: 40rpx;
}

.product .item .shopName .price {
  float: right;
  font-size: 36rpx;
  color: #f00;
}
.goods .goods-item{
  width: 315rpx;
  float: left;
  margin-right: 40rpx;
}
.goods .goods-item navigator{
  display: block;
  padding: 20rpx;
  margin-bottom: 60rpx;
  color: #333;
  border: 2rpx solid #e4e4e4;
}
.goods .goods-item .pic{
 width: 275rpx;
 height: 300rpx; 
}
.goods .goods-item .pic image{
  width: 100%;
  height: 100%;
}
.goods .goods-item .goods-name{
  width: 100%;
  height: 80rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}
.goods .goods-item .country{
  font-size: 24rpx;
  color: #939393;
  line-height: 30rpx;
  height: 60rpx;
}
.goods .goods-item .price{
  padding: 10rpx 0;
}
.goods .goods-item .price .ourprice{
  color: #ff0000;
  font-size: 30rpx;
  font-weight: bold;
}
.goods .goods-item .price .discount{
  display: inline-block;
  height: 32rpx;
  line-height: 32rpx;
  padding: 4rpx;
  font-size: 24rpx;
  background-color: #ff0000;
  color: #fff;
}
.goods .goods-item .price .marketprice{
  color: #939393;
  text-decoration: line-through;
  font-size: 30rpx;
  margin-left: 30rpx;
}