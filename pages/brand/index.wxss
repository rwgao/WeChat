/* pages/brand/index.wxss */
@import "../templates/template.wxss";
.container{
  padding: 0 40rpx;
  background-color: #fff;
}
.title{
  height:80rpx;
  line-height:80rpx;
  width:100%;
  font-size:38rpx;
}
.brandList{
  width: 670rpx;
}
.brandList .brand-item{
  border: 2rpx solid #ccc;
  width: 666rpx;
  height: 280rpx;
  margin: 20rpx 0;
}
.brandList .brand-item .left{
  width: 366rpx;
  height: 280rpx;
  float: left;
}
.brandList .brand-item .left image{
  width: 100%;
  height: 100%;
}
.brandList .brand-item .right{
  float: left;
  width: 280rpx;
  padding: 0 10rpx;
  height: 280rpx;
}
.brandList .brand-item .right .logo{
  height:132rpx;
  width:240rpx;
  padding:10rpx 20rpx;
}
.brandList .brand-item .right .logo image{
  width: 100%;
  height: 100%;
}
.brandList .brand-item .brandName{
  font-size: 32rpx;
  text-align: center;
  line-height: 40rpx;
}
.brandList .brand-item .desc{
  height:40rpx;
  line-height:40rpx;
  font-size:26rpx;
  color:#ccc;
  width:280rpx;
  text-align: center;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}
.brandList .brand-item .minPrice{
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  color: #ff0000;
  font-size: 32rpx;
}
.category{
  width: 670rpx;
  margin: 0 40rpx;
  overflow: hidden;
}
.category .categoryName{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 0;
}
.category .goods{
  width: 710rpx;
}
.category .goods .show-more .more{
  border: 2rpx solid #ccc;
  display: block;
  padding: 0;
  padding-top: 420rpx;
  background: url('http://www.huanqiuxiaozhen.com/assets/images/iconfont-addmore.png') no-repeat;
  background-size: 100px;
  height: 130rpx;
  text-align: center;
  background-position: 60rpx 60rpx;
  color: #ccc;
}
.category .noList{
  padding: 20rpx;
  line-height: 30rpx;
  color: #ccc;
  font-size: 26rpx;
}